<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cart_item"
    android:layout_width="200dp"
    android:layout_height="250dp"
    android:clickable="true"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true"
    card_view:contentPadding="4dp"
    card_view:cardBackgroundColor="@color/color_text_register"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="274dp"
        android:id="@+id/Rel">

        <ImageView
            android:id="@+id/c_icon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"
            android:foregroundGravity="center"
            android:src="@drawable/splashimage"
            android:layout_alignRight="@+id/Rel"
            />

        <TextView
            android:id="@+id/c_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/c_icon"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="-36dp"
            android:layout_marginTop="5dp"
            android:text="name"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_marginStart="20dp" />

        <TextView
            android:id="@+id/c_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/c_name"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="-36dp"
            android:text="Price"
            android:textAlignment="center" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>